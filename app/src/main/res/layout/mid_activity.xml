
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#232323">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/bPoppy"
        android:layout_alignEnd="@+id/bPoppy"
        android:id="@+id/linearLayout">

    </LinearLayout>



    <Button
        android:id="@+id/bAhri"
        android:layout_width="115dp"
        android:layout_height="wrap_content"

        android:background="@drawable/ahri"
        android:text="Ahri"
        android:textColor="#FFA500"
        android:layout_below="@+id/bZed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="Ahri" />

    <Button
        android:id="@+id/bZed"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:background="@drawable/zed"
        android:text="Zed"
        android:textColor="#FFA500"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="Zed"/>


    <Button
        android:id="@+id/bNami"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:background="@drawable/nami"
        android:text="Nami"
        android:textColor="#FFA500"
        android:layout_alignBaseline="@+id/bZed"
        android:layout_alignBottom="@+id/bZed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="Nami" />
    <TextView
        android:id="@+id/itemmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:text="Press a button to select your character!"
        android:textSize="18dip"
        android:textStyle="bold"
        android:textColor="#F8F8FF"
        android:background="@drawable/Mage_Large"
        android:layout_above="@+id/bNami"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/itemtopmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:text="Mid lane"
        android:textColor="#F8F8FF"
        android:textSize="18dip"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <Button
        android:id="@+id/bJhin"
        android:layout_width="110dp"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:background="@drawable/jhin"
        android:text="jhin"
        android:textColor="#FFA500"
        android:layout_below="@+id/bZed"
        android:layout_toRightOf="@+id/bAhri"
        android:layout_alignRight="@+id/bZed"
        android:layout_alignEnd="@+id/bZed"
        android:onClick="Jhin"/>

    <Button
        android:id="@+id/bCaitlyn"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/caitlyn"
        android:text="Caitlyn"
        android:textColor="#FFA500"
        android:layout_below="@+id/itemmessage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="Caitlyn"/>


</RelativeLayout>
