<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="#232323"
        android:orientation="vertical"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <ImageView
            android:id="@+id/img_championify_logo_splashscreen"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/LinearLayout2"
            android:layout_marginEnd="107dp"
            android:layout_marginRight="107dp"
            android:layout_marginTop="96dp"
            android:alpha="0"
            android:src="@drawable/images" />


        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#64d5d5d5"
            android:orientation="horizontal"
            android:padding="1dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/LinearLayout"
            android:layout_marginTop="5dp"
            android:background="#64d5d5d5"
            android:orientation="horizontal"
            android:padding="1dp">

        </LinearLayout>

        <Button
            android:id="@+id/btn_builds_dialog"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/img_championify_logo_splashscreen"
            android:layout_marginTop="40dp"
            android:background="#c8000000"
            android:text=" ADC"
            android:textColor="#006e9e"
            android:textSize="18dp"
            android:onClick="ADC"/>

        <Button
            android:id="@+id/btn_counters_dialog"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_builds_dialog"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="64dp"
            android:background="#c8000000"
            android:text="MID"
            android:textColor="#006e9e"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="401dp"
            android:onClick="Mid" />

        <Button
            android:id="@+id/btn_counters_dialog2"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp"
            android:background="#c8000000"
            android:text="TOP"
            android:textColor="#006e9e"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="401dp"
            android:layout_above="@+id/btn_counters_dialog"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="Top"/>

        <Button
            android:id="@+id/btn_counters_dialog3"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_counters_dialog2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="64dp"
            android:background="#c8000000"
            android:text="Jungle"
            android:textColor="#006e9e"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="401dp"
            android:onClick="Jungle"/>
        <Button
            android:id="@+id/btn_counters_dialog4"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:background="#c8000000"
            android:text="Support"
            android:textColor="#006e9e"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="401dp"
            android:layout_below="@+id/btn_builds_dialog"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:onClick="Sup"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>