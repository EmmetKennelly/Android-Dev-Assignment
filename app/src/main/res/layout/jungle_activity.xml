
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#232323">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </LinearLayout>






    <Button
        android:id="@+id/bJinx"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:background="@drawable/jinx"
        android:text="Jinx"
        android:textColor="#FFA500"
        android:layout_alignBaseline="@+id/bPoppy"
        android:layout_alignBottom="@+id/bPoppy"
        android:layout_alignLeft="@+id/itemtopmessage"
        android:layout_alignStart="@+id/itemtopmessage"
        android:onClick="Jinx"/>
    <TextView
        android:id="@+id/itemmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:text="Press a button to select your character!"
        android:textSize="18dip"
        android:textStyle="bold"
        android:textColor="#F8F8FF"
        android:background="@drawable/Fighter_Large"
        android:layout_above="@+id/bJinx"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/itemtopmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:text="Jungle"
        android:textColor="#F8F8FF"
        android:textSize="18dip"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <Button
        android:id="@+id/bHecarim"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/hecarim"
        android:text="Hecarim"
        android:textColor="#FFA500"
        android:layout_below="@+id/itemmessage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="Hecarim"/>

    <Button
        android:id="@+id/bPoppy"
        android:layout_width="110dp"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:background="@drawable/poppy"
        android:text="Poppy"
        android:textColor="#FFA500"
        android:layout_marginTop="136dp"
        android:layout_below="@+id/itemtopmessage"
        android:layout_toLeftOf="@+id/bHecarim"
        android:layout_toStartOf="@+id/bHecarim"
        android:onClick="Poppy"/>


</RelativeLayout>

